{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon",
            "runtimeExecutable": "${workspaceFolder}/node/node_modules/.bin/nodemon",
            "cwd": "${workspaceFolder}/node",
            "program": "${workspaceFolder}/node/bin/www",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnFirstSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Current File",
            "program": "${workspaceFolder}/node/node_modules/.bin/mocha",
            "args": [
              "--timeout",
              "60000",
              "--colors",
              "${file}",
              "--require",
              "ts-node/register"
            ],
            "env": {
                "TS_NODE_PROJECT": "${fileDirname}/tsconfig.json"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen"
      }
    ]
}